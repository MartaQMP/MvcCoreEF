@model IEnumerable<MvcCoreProceduresEF.Models.Enfermo>
@section style{
    <style>
        table {
            margin: auto;
            width: 70%;
            text-align: center
        }

        h4 {
            text-align: center
        }
    </style>
}

<h1>Enfermos Entity Framework Procedures</h1>
<hr />
@if(Model != null){
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Inscripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaNac)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NSS)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) 
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Inscripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaNac)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NSS)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-inscripcion="@item.Inscripcion" class="btn btn-outline-secondary">Modificar</a> 
                        <a asp-action="Details" asp-route-inscripcion="@item.Inscripcion" class="btn btn-outline-dark">Detalles</a> 
                        <a asp-action="Delete" asp-route-inscripcion="@item.Inscripcion" class="btn btn-outline-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else
{
    <h4>@ViewBag.Mensaje</h4>
}